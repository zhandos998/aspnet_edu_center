@model aspnet_edu_center.Models.StudDocument

@{
    ViewData["Title"] = "Документ қосу";
}

<h1>Документ қосу</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDocument" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Document_id" class="form-control d-none" value="@ViewBag.Document_id" />
            <input name="group_id" class="form-control d-none" value="@ViewBag.Group_id" />

            <div class="custom-file mb-3">
                <label asp-for="Url" class="custom-file-label">Файлды таңдау</label>
                <input asp-for="Url" class="custom-file-input" type="file" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Құру" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Тізімге оралу</a>
</div>

