@model aspnet_edu_center.ViewModels.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите Name</label><br />
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <label asp-for="Tel_num">Введите Tel_num</label><br />
            <input type="text" asp-for="Tel_num" class="form-control" />
            <span asp-validation-for="Tel_num" />
        </div>

        <div class="form-group">
            <label asp-for="Role_id">Введите Role_id</label><br />
            <select class="form-control" asp-for="Role_id">
                <option value="1">Admin</option>
                <option value="2">Teacher</option>
                <option value="3">Student</option>
            </select>
            <span asp-validation-for="Role_id" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Регистрация" />
        </div>
    </div>
</form>