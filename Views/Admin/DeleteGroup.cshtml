@model aspnet_edu_center.Models.Group

@{
    ViewData["Title"] = "Группаны жою";
}

<h1>Группаны жою</h1>

<h3>Сіз шынымен группаны жойғыңыз келеді ме?</h3>
<div>
    <h4>Группа</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Группаның аты
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Группаның типі
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Group_type)
        </dd>
        <dt class = "col-sm-2">
            Эдвайзер Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supervisor_id)
        </dd>
        <dt class = "col-sm-2">
            Басталу уақыты
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.date_form)
        </dd>
        <dt class = "col-sm-2">
            Аяқталу уақыты
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.date_to)
        </dd>
    </dl>
    
    <form asp-action="DeleteGroup">
        <input type="hidden" asp-for="Id" />
        <div class="btn-group rounded" role="group">
            <input type="submit" value="Жою" class="text-dark btn border" />
            <a class="text-dark btn border" asp-action="ViewGroups">Тізімге оралу</a>
        </div>
    </form>
</div>
