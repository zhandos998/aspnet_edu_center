@model IEnumerable<aspnet_edu_center.Models.Group_type>

@{
    ViewData["Title"] = "ViewGroup_types";
}

<h1>ViewGroup_types</h1>

<p>
    <a asp-action="CreateGroup_type">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="EditGroup_type" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DetailsGroup_type" asp-route-id="@item.Id">Details</a> |
                <a asp-action="DeleteGroup_type" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
