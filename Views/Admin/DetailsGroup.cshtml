@model aspnet_edu_center.Models.Group

@{
    ViewData["Title"] = "Группа";
}

<h1>Группа</h1>

<div>
    <h4>Группа</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Группа аты
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Группа типі
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Group_type)
        </dd>
        <dt class = "col-sm-2">
            Эдвайзер Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supervisor_id)
        </dd>
        <dt class="col-sm-2">
            Басталу уақыты
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.date_form)
        </dd>
        <dt class="col-sm-2">
            Аяқталу уақыты
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.date_to)
        </dd>
    </dl>
</div>
<div>
    <div class="btn-group rounded" role="group">
        <a class="text-dark btn border" asp-route-id="@Model.Id" asp-action="EditGroup">Өзгерту</a>
        <a class="text-dark btn border" asp-action="ViewGroups">Тізімге оралу</a>
    </div>
</div>
