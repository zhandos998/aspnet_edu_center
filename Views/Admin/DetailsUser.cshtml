@model aspnet_edu_center.Models.User

@{
    ViewData["Title"] = "Қолданушы";
}

<h1>Қолданушы</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Аты-жөні
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Құпия сөз
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            Телефон нөмірі
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tel_num)
        </dd>
        <dt class = "col-sm-2">
            Рөл Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role_id)
        </dd>
    </dl>
</div>
<div> 
    <div class="btn-group rounded" role="group">
        <a class="text-dark btn border" asp-route-id="@Model.Id" asp-action="EditUser">Өзгерту</a>
        <a class="text-dark btn border" asp-action="ViewUser">Тізімге оралу</a>
    </div>
</div>
