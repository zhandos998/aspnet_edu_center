    ViewData["Title"] = "Группа типін жою";
}

<h1>Группа типін жою</h1>

<h3>Сіз шынымен группа типін жойғыңыз келеді ме?</h3>
<div>
    <h4>Группа типі</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
