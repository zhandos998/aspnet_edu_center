@model aspnet_edu_center.Models.Timetable

@{
    ViewData["Title"] = "EditTimeTableGroup";
}

<h1>EditTimeTableGroup</h1>

<h4>Timetable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTimeTableGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input asp-for="Group_id" class="form-control d-none" value=@ViewBag.Group_id />
            <div class="form-group">
                <label asp-for="Week_day" class="control-label"></label>
                @*<input asp-for="Week_day" class="form-control" />*@
                <select asp-for="Week_day" class="form-control">
                    <option value="1">Понедельник</option>
                    <option value="2">Вторник</option>
                    <option value="3">Среда</option>
                    <option value="4">Четверг</option>
                    <option value="5">Пятница</option>
                    <option value="6">Суббота</option>
                    <option value="7">Воскресенье</option>
                </select>
                <span asp-validation-for="Week_day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

