@model List<Dictionary<string, object>>

@{
    ViewData["Title"] = "DetailsGroup";
}

<h1>DetailsGroup</h1>
    
<p>
    <a asp-action="CreateTest">Create Test</a>
</p>
    @*<form asp-action="AttendanceStudent" asp-controller="Teacher" asp-anti-forgery="true">*@
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Tel_num
                    </th>
                    <th>
                        Attendance
                    </th>
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="DetailsUser" asp-route-id=@item["Id"] asp-route-group_id=@ViewBag.Group_id>@item["Name"]</a>
                        </td>
                        <td>
                            @item["Email"]
                        </td>
                        <td>
                            @item["Tel_num"]
                        </td>
                        <td>
   @*                         <input class="checkbox" type="checkbox" name="attendance[]"/>
                            <input class="d-none" name="id[]" value=@item["Id"]/>*@
                        @if ((bool)item["Camed"])
                        {
                            <input class="checkbox" type="checkbox" data-id=@item["Id"] checked/>
                        }
                        else
                        {
                            <input class="checkbox" type="checkbox" data-id=@item["Id"]/>
                        }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @*<input type="submit" />*@
    @*</form>*@
