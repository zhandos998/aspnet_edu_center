@model List<Dictionary<string, object>>

@{
    ViewData["Title"] = "DetailsUser";
}

<h1>@ViewBag.User_Name</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Grades
            </th>
            <th>
                Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item["Grades"]
                </td>
                <td>
                    @item["Date"]
                </td>
            </tr>
        }
        <tr>
            <td>
            </td>
            <td>
            </td>
        </tr>
    </tbody>

</table>

<h3>Attendances</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Camed
            </th>
            <th>
                Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Attendances)
        {
            <tr>
                <td>
                    @if (item["Camed"])
                    {
                        <p>Yes</p>
                    }
                    else
                    {
                        <p>No</p>
                    }
                </td>
                <td>
                    @item["Date"]
                </td>
            </tr>
        }
    </tbody>

</table>

<h1>Поставить балл</h1>

